{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Car Renting API",
    "description": "API for managing car rentals"
  },
  "host": "car-renting-app-api.onrender.com",
  "basePath": "/api/v1",
  "schemes": [
    "https"
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "description": "Creates a new user account.",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User object that needs to be registered",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string"
        },
        "gender": {
          "type": "string",
          "enum": ["MALE", "FEMALE"]
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["USER", "ADMIN"]
        }
      },
      "required": ["userName", "password"]
    }
  }
}
